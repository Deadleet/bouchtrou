<div class = "fixed-top">
<%= link_to "revenir", bouchtroues_path, class: "btn btn-primary mt-2 mb-2 " %>
</div>

<div class="container">
  <div class="text-center">
    <h1>Mon profil : <%= @bouchtroue.name_profile %></h1>
  </div>
    <br>
    <div class="row">
      <div class="col-md-4">
        <%= cl_image_tag @bouchtroue.photo.key, width: 180,lenght: 190, class: "pdp" %>
      </div>
      <div class="col-md-8">
        <div class="row">
          <p>Spécialité : <%= @bouchtroue.specialty %></p>
          <p>Description : <%= @bouchtroue.description %></p>
          <p>Status : <%= @bouchtroue.status %>.</p>
          <p> Mes dispo du moment : <%= @bouchtroue.available_start %> au <%= @bouchtroue.available_end %></p>
          <p> Rating : </p>
          <p>Prix : <%= @bouchtroue.hour_price %> € / heure</p>
          <p>Localisation du moment : <%= @bouchtroue.location %></p>
        </div>
        <div class="row col-md-2">
          <% if @bouchtroue.user.email == current_user.email %>
          <div class = "d-flex m-2">
            <div class = "m-2"><%= link_to "edit", edit_bouchtroue_path(@bouchtroue), class: "btn" %></div>
            <div class = "m-2"><%= link_to "Suppr", bouchtroue_path(@bouchtroue), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn flex-grow-1" %></div>
          </div>
          <% else %>
          <% end %>
          <% if @bouchtroue.user.email != current_user.email %>
            <%= link_to "reserver", new_bouchtroue_booking_path(@bouchtroue), class: "btn" %>
          <% else %>
          <% end %>
        </div>
      </div>
    </div>
</div>
