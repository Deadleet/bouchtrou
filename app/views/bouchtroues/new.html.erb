<div class = "container">

<h1 class = "container">Creer un profil de Bouchtroue</h1>

<%= simple_form_for @bouchtroue do |f| %>
  <div class="form-inputs">
    <%= f.input :name_profile %>
    <%= f.input :specialty %>
    <%= f.input :description %>
    <%= f.input :status %>
    <%= f.input :location %>
  </div>

  <div class="form-actions mb-5">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

</div>


  <div class="row">
      <% @bouchtroues.each do |bouchtroue| %>
        <% if bouchtroue.user.email != current_user.email %>
          <div class = "d-flex justify-content-around col-4">
           <div class="container py-2 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                  <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                      <div class="d-flex text-black">
                        <div class="flex-shrink-0">
                          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                            alt="Generic placeholder image" class="img-fluid"
                            style="width: 180px; border-radius: 10px;">
                        </div>

                        <div class="flex-grow-1 ms-3">
                          <h5 class="mb-1"><%= bouchtroue.name_profile %></h5>
                          <p class="mb-2 pb-1" style="color: #2b2a2a;">Ma description : <%= bouchtroue.description %>
                          <p class="mb-2 pb-1" style="color: #2b2a2a;">Ma spécialité : <%= bouchtroue.specialty %></p>
                          <p class="mb-2 pb-1" style="color: #2b2a2a;">Ma zone du moment <%= bouchtroue.location %>
                            <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                              style="background-color: #efefef;">
                              <div>
                                <p class="small text-muted mb-1">Rating                  8.5</p>
                              </div>
                            </div>

                            <div class="d-flex pt-1">
                              <%# condition %>
                              <% if bouchtroue.status == "libre" %>
                                <%= link_to "en savoir plus", bouchtroue_path(bouchtroue), class: "btn btn-success mt-2 mb-2" %>
                              <% elsif bouchtroue.status == "occupe" %>
                                <%= link_to "en savoir plus", bouchtroue_path(bouchtroue), class: "btn btn-danger mt-2 mb-2" %>
                              <% else %>
                                <%= link_to "en savoir plus", bouchtroue_path(bouchtroue), class: "btn btn-warning mt-2 mb-2" %>
                              <% end %>
                            </div>
                        </div>
                     </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% else %>
        <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
